{
	"compilerOptions": {
		"lib": ["es5", "es6"],
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./dist",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"typeRoots": ["./src/types", "./node_modules/@types"],
		"esModuleInterop": true,
		"allowJs": true,
		"checkJs": true
		// "noImplicitAny": true
	}
}
