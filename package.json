{
	"name": "windows-my-shop-backend",
	"version": "1.0.0",
	"main": "index.js",
	"watch": {
		"tailwind:css": {
			"patterns": [
				"src/primary-server/public/css/tailwind.css",
				"src/primary-server/views/**/*.html"
			],
			"extensions": "css,html",
			"quiet": false
		}
	},
	"scripts": {
		"start": "node src/server.ts",
		"dev": "nodemon --ignore src/primary-server/views/*.* src/server.ts",
		"build": "tsc",
		"check-types": "tsc --noEmit",
		"start:prod": "node dist/server.js",
		"tailwind:css": "postcss src/primary-server/public/css/tailwind.css -o src/primary-server/public/css/style.css -w",
		"watch:css": "npm-watch tailwind:css"
	},
	"license": "MIT",
	"dependencies": {
		"@tailwindcss/forms": "^0.5.7",
		"autoprefixer": "^10.4.17",
		"bcryptjs": "^2.4.3",
		"cloudinary": "^1.41.1",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"crypto": "^1.0.1",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"express-async-errors": "^3.1.1",
		"express-flash": "^0.0.2",
		"express-handlebars": "^7.1.2",
		"express-mongo-sanitize": "^2.2.0",
		"express-session": "^1.17.3",
		"global": "^4.4.0",
		"helmet": "^7.1.0",
		"hpp": "^0.2.3",
		"jsonwebtoken": "^9.0.2",
		"method-override": "^3.0.0",
		"moment": "^2.29.4",
		"mongoose": "^8.0.3",
		"mongoose-lean-virtuals": "^0.9.1",
		"multer": "^1.4.5-lts.1",
		"multer-storage-cloudinary": "^4.0.0",
		"nodemon": "^3.0.3",
		"npm-watch": "^0.11.0",
		"passport": "^0.7.0",
		"passport-google-oauth20": "^2.0.0",
		"postcss": "^8.4.33",
		"postcss-cli": "^11.0.0",
		"qs": "^6.11.2",
		"slugify": "^1.6.6",
		"tailwindcss": "^3.4.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3",
		"validator": "^13.11.0",
		"xss-clean": "^0.1.4",
		"zod": "^3.22.4",
		"zod-validation-error": "^2.1.0"
	},
	"devDependencies": {
		"@types/bcryptjs": "~2.4.6",
		"@types/compression": "~1.7.5",
		"@types/cookie-parser": "~1.4.6",
		"@types/cors": "~2.8.17",
		"@types/express": "~4.17.21",
		"@types/hpp": "~0.2.5",
		"@types/jsonwebtoken": "~9.0.5",
		"@types/multer": "^1.4.11",
		"@types/qs": "~6.9.11",
		"@types/validator": "~13.11.8"
	}
}